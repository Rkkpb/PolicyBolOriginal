<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/em_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:text="@string/emerg_title_name"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/em_relation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:text="@string/emerg_title_rel"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/em_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:text="@string/emerg_title_number"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"/>
                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"
                        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_sep"
        android:background="@color/colorsecApp" />

</LinearLayout>